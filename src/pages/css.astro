---
import Title from "@components/Title/Title.astro";
import Layout from "@layouts/Layout.astro";
import BlogPreview from "@components/BlogPreview/BlogPreview.astro";

let allPost = await Astro.glob("./posts/css/*.md");
allPost = allPost.sort(
  (date1, date2) =>
    new Date(date2.frontmatter.date).valueOf() -
    new Date(date1.frontmatter.date).valueOf()
);
---

<Layout title="Welcome to My Blog.">
  <Title title="CSS" title2="Blog" subtitle="Awesome blog with Astro" />

  {allPost.map((param) => <BlogPreview post={param} />)}
</Layout>
